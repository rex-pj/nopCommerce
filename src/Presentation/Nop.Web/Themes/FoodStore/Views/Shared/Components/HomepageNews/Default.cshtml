@model HomepageNewsItemsModel
@if (Model.NewsItems.Count > 0)
{
    <div class="news-list-homepage my-5">
        <div class="title">
            <strong>@T("News")</strong>
        </div>
        <div class="news-items row">
            @foreach (var item in Model.NewsItems)
            {
                <div class="news-item col-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="news-head">
                                <a class="news-title card-title d-block" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@item.Title</a>
                                <span class="d-block news-date text-success">@item.CreatedOn.ToString("D")</span>
                            </div>
                            <div class="news-body">
                                @Html.Raw(item.Short)
                            </div>
                            <div class="buttons">
                                <a href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })" class="read-more">@T("News.MoreInfo")</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="view-all">
            <a href="@Url.RouteUrl("NewsArchive")">@T("News.ViewAll")</a>
        </div>
    </div>

}