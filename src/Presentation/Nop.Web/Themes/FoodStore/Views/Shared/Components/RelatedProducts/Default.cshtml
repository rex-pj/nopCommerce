@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="related-products-grid product-grid mt-3 mb-2">
        <div class="title mb-2">
            <strong>@T("Products.RelatedProducts")</strong>
        </div>
        <div class="item-grid row">
            @foreach (var item in Model)
            {
                <div class="item-box mb-3 col-6 col-sm-6 col-md-4 col-lg-3">@await Html.PartialAsync("_ProductBox", item)</div>
            }
        </div>
    </div>
}