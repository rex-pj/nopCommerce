@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid home-page-product-grid my-5">
        <div class="module-title title mb-2">
            <strong>@T("Homepage.Products")</strong>
        </div>
        <div class="item-grid row">
            @foreach (var item in Model)
            {
                <div class="item-box col-6 col-sm-6 col-md-4 col-lg-3">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}