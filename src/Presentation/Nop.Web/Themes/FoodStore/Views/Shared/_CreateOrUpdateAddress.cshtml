@model AddressModel

<input class="address-id" asp-for="Id" type="hidden" />
<div class="edit-address">
    <div class="inputs mb-3 row">
        <label asp-for="FirstName" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
        <div class="relative-from col-sm-12 col-md-6 col-lg-4">
            <input asp-for="FirstName" class="form-control" />
            <nop-required />
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="inputs mb-3 row">
        <label asp-for="LastName" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
        <div class="relative-from col-sm-12 col-md-6 col-lg-4">
            <input asp-for="LastName" class="form-control" />
            <nop-required />
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="inputs mb-3 row">
        <label asp-for="Email" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
        <div class="relative-from col-sm-12 col-md-6 col-lg-4">
            <input asp-for="Email" class="form-control" />
            <nop-required />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    @if (Model.CompanyEnabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="Company" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <input asp-for="Company" class="form-control" />
                @if (Model.CompanyRequired)
                {
                    <nop-required />
                }
                <span asp-validation-for="Company"></span>
            </div>
        </div>
    }
    @if (Model.CountryEnabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="CountryId" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <select asp-for="CountryId" asp-items="Model.AvailableCountries"
                        data-trigger="country-select"
                        data-url="@(Url.RouteUrl("GetStatesByCountryId"))"
                        data-stateprovince="#@Html.IdFor(model => model.StateProvinceId)"
                        data-loading="#states-loading-progress" class="form-control col-sm-8"></select>
                <nop-required />
                <span asp-validation-for="CountryId"></span>
            </div>
        </div>
    }

    @if (Model.CountryEnabled && Model.StateProvinceEnabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="StateProvinceId" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <select asp-for="StateProvinceId" asp-items="Model.AvailableStates"
                        data-trigger="state-select" class="form-control col-sm-8">
                </select>
                <span id="states-loading-progress" style="display: none;" class="please-wait">@T("Common.Wait")</span>
                <span asp-validation-for="StateProvinceId"></span>
            </div>
        </div>
    }
    @if (Model.CountyEnabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="County" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <input asp-for="County" class="form-control col-sm-8" />
                @if (Model.CountyRequired)
                {
                    <nop-required />
                }
                <span asp-validation-for="County"></span>
            </div>            
        </div>
    }
    @if (Model.CityEnabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="City" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <input asp-for="City" class="form-control col-sm-8" />
                @if (Model.CityRequired)
                {
                    <nop-required />
                }
                <span asp-validation-for="City"></span>
            </div>
        </div>
    }
    @if (Model.StreetAddressEnabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="Address1" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <input asp-for="Address1" class="form-control col-sm-8" />
                @if (Model.StreetAddressRequired)
                {
                    <nop-required />
                }
                <span asp-validation-for="Address1"></span>
            </div>
        </div>
    }
    @if (Model.StreetAddress2Enabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="Address2" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <input asp-for="Address2" class="form-control col-sm-8" />
                @if (Model.StreetAddress2Required)
                {
                    <nop-required />
                }
                <span asp-validation-for="Address2"></span>
            </div>
        </div>
    }
    @if (Model.ZipPostalCodeEnabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="ZipPostalCode" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <input asp-for="ZipPostalCode" class="form-control col-sm-8" />
                @if (Model.ZipPostalCodeRequired)
                {
                    <nop-required />
                }
                <span asp-validation-for="ZipPostalCode"></span>
            </div>
        </div>
    }
    @if (Model.PhoneEnabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="PhoneNumber" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <input asp-for="PhoneNumber" class="form-control col-sm-8" />
                @if (Model.PhoneRequired)
                {
                    <nop-required />
                }
                <span asp-validation-for="PhoneNumber"></span>
            </div>
        </div>
    }
    @if (Model.FaxEnabled)
    {
        <div class="inputs mb-3 row">
            <label asp-for="FaxNumber" asp-postfix=":" class="form-label col-sm-12 col-md-4 col-lg-3 text-start"></label>
            <div class="relative-from col-sm-12 col-md-6 col-lg-4">
                <input asp-for="FaxNumber" class="form-control col-sm-8" />
                @if (Model.FaxRequired)
                {
                    <nop-required />
                }
                <span asp-validation-for="FaxNumber"></span>
            </div>            
        </div>
    }
    @if (Model.CustomAddressAttributes.Count > 0)
    {
        @await Html.PartialAsync("_AddressAttributes", Model.CustomAddressAttributes)
    }
</div>
